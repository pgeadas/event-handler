{
  "extends": "recommended",
  "rules": {
    "CatchException": {
      "enabled": false
    },
    "CatchThrowable": {
      "enabled": false
    },
    "ClassJavadoc": {
      "enabled": false
    },
    "ClosureAsLastMethodParameter": {
      "enabled": false
    },
    "DuplicateNumberLiteral": {
      "enabled": false
    },
    "FieldTypeRequired": {
      "enabled": false
    },
    "JavaIoPackageAccess": {
      "enabled": false
    },
    "MethodParameterTypeRequired": {
      "enabled": false
    },
    "MethodSize": {
      "enabled": false
    },
    "NoDef": {
      "enabled": false
    },
    "PrintStackTrace": {
      "enabled": false
    },
    "PropertyName": {
      "enabled": false
    },
    "SpaceAroundMapEntryColon": {
      "enabled": false
    },
    "UnnecessaryObjectReferences": {
      "enabled": false
    },
    "VariableName": {
      "enabled": false
    },
    "VariableTypeRequired": {
      "enabled": false
    },
    "FactoryMethodName": {
      "enabled": false
    },
    "JUnitPublicNonTestMethod": {
      "enabled": false
    },
    "UnusedPrivateMethod": {
      "enabled": false
    },
    "MethodName": {
      "enabled": true,
      "doNotApplyToClassNames": "*Spec,*Specification,*Test"
    },
    "UnnecessaryBooleanExpression": {
      "enabled": true,
      "doNotApplyToClassNames": "*Spec,*Specification"
    },
    "MethodReturnTypeRequired": {
      "enabled": true,
      "doNotApplyToClassNames": "*Spec,*Specification,*Test"
    }
  }
}
